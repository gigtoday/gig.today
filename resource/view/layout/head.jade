head
block head
    block vars
    base(href='#{locals.config.baseUrl}')

    link(rel='stylesheet', href='#{locals.config.assetPath}css/main.min.css')
    script(src='#{locals.config.assetPath}app.js')

    meta(charset='utf-8')
    meta(name='description', content='#{locals.meta.description}')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='updated', content='#{locals.meta.updated}')

    title #{locals.meta.title}
